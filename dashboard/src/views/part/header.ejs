            <a href="/" class="navbar-item">
              Accueil
            </a>
      
            <a href="/commands"class="navbar-item">
              Commandes
            </a>
            <div class="navbar-item">
                <a href="https://discord.com/api/oauth2/authorize?client_id=1121449522309120070&permissions=8&scope=bot%20applications.commands" class="button is-primary is-link">
                    Ajouter Otto Bot
                </a>
            </div>
          </div>
      
          <div class="navbar-end">
            <div class="navbar-item">
                <% if (user) { %>
                    <a href="/dashboard" class="button is-primary is-link">
                        <strong>Dashboard</strong>
                    </a>
                <% } else { %>
                    <a href="/login" class="button is-primary is-link">
                        <strong>Se connecter</strong>
                    </a>
                <% } %>
            </div>
            <% if (user) { %>
            <figure class="image is-48x48">
              <img class="is-rounded" src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
